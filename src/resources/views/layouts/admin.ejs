<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <!-- File CSS riêng -->
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body>
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-white border-right">

      <!-- Thông tin user (avatar + tên + role) -->
     
      <a class="navbar-brand d-flex align-items-center" href="#">
        <!-- Ảnh logo -->
        <img 
        src="/image/logoRes.png" 
        alt="Logo" 
        style="    margin-left: 60px;
    width: 131px;" 
        class="mr-2"
        />
    </a>
      <!-- Menu -->
      <ul class="list-unstyled components mt-3">
        <li class="active">
          <a href="#"><i class="fas fa-home mr-2"></i>Bảng Điều Khiển</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-cogs mr-2"></i>Xem thông tin nhân viên</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-puzzle-piece mr-2"></i>Cập nhật mức lương và chức vụ của nhân viên</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-text-height mr-2"></i>Xem danh sách bàn và tình trạng</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-file-alt mr-2"></i>Xem các chương trình khuyến mãi và sự kiện</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-table mr-2"></i>Xem báo cáo doanh thu</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-chart-bar mr-2"></i>Theo dõi số lượng đặt chỗ</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-map mr-2"></i>Cấu hình cài đặt hệ thống</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-file mr-2"></i>Tiến trình thanh toán</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-layer-group mr-2"></i>Xem trạng thái của đơn đặt món ăn</a>
        </li>
      </ul>
    </nav>

    <!-- Phần nội dung trang -->
    <div id="content" class="bg-light">
      <!-- Thanh navbar trên cùng -->
      <nav class="navbar navbar-expand navbar-dark bg-white shadow-sm">
        <!-- Logo -->
        
        <div class="user-profile text-center p-3 border-bottom">
            <h5 class="mb-0">Stanley Jones</h5>
            <span class="text-muted">Administrator</span>
          </div>
        <!-- Nút toggle ẩn/hiện sidebar (cho màn hình nhỏ) -->
        <button
          class="btn btn-link d-md-none"
          type="button"
          data-toggle="collapse"
          data-target="#sidebar"
          aria-controls="sidebar"
          aria-expanded="false"
          aria-label="Toggle sidebar"
        >
          <i class="fas fa-bars"></i>
        </button>

        <!-- Phần bên phải navbar -->
        <div class="ml-auto d-flex align-items-center">

          <!-- Thông tin user -->
          <div class="dropdown">
            <a
              class="dropdown-toggle d-flex align-items-center text-dark"
              href="#"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
            <i class="fas fa-user"></i>
              <span class="ml-2">Martine K</span>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
              <a class="dropdown-item" href="#">Logout</a>
            </div>
          </div>
        </div>
      </nav>

      <!-- Nội dung chính -->
      <div class="container-fluid mt-4">
        <h4>Welcome !</h4>
        <div class="row mt-4">
          <!-- Card 1 -->
          <div class="col-md-3">
            <div class="card text-center mb-4">
              <div class="card-body">
                <h5 class="card-title">8954</h5>
                <p class="card-text text-muted">Lifetime total sales</p>
              </div>
            </div>
          </div>
          <!-- Card 2 -->
          <div class="col-md-3">
            <div class="card text-center mb-4">
              <div class="card-body">
                <h5 class="card-title">7841</h5>
                <p class="card-text text-muted">Income amounts</p>
              </div>
            </div>
          </div>
          <!-- Card 3 -->
          <div class="col-md-3">
            <div class="card text-center mb-4">
              <div class="card-body">
                <h5 class="card-title">6521</h5>
                <p class="card-text text-muted">Total users</p>
              </div>
            </div>
          </div>
          <!-- Card 4 -->
          <div class="col-md-3">
            <div class="card text-center mb-4">
              <div class="card-body">
                <h5 class="card-title">325</h5>
                <p class="card-text text-muted">Total visits</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Chart Row -->
        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4">
              <div class="card-header">Total Revenue</div>
              <div class="card-body">
                <!-- Biểu đồ giả lập -->
                <img
                  src="https://via.placeholder.com/400x200/ddd/000?text=Revenue+Chart"
                  alt="Revenue Chart"
                  class="img-fluid"
                />
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card mb-4">
              <div class="card-header">Sales Analytics</div>
              <div class="card-body">
                <!-- Biểu đồ giả lập -->
                <img
                  src="https://via.placeholder.com/400x200/ddd/000?text=Sales+Analytics"
                  alt="Sales Analytics"
                  class="img-fluid"
                />
              </div>
            </div>
          </div>
        </div>
      </div> <!-- End container-fluid -->
    </div> <!-- End #content -->

    <!-- Bootstrap + jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

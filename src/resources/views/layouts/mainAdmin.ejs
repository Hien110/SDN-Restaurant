<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <!-- File CSS riêng -->
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body>
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-white border-right">

      <!-- Thông tin user (avatar + tên + role) -->
     
      <a class="navbar-brand d-flex align-items-center" href="#">
        <!-- Ảnh logo -->
        <img 
        src="/image/logoRes.png" 
        alt="Logo" 
        style="    
          margin-left: 60px;
          width: 131px;" 
        class="mr-2"
        />
    </a>
      <!-- Menu -->
      <ul class="list-unstyled components mt-3">
        <li class="active">
            <a href="#"><i class="fas fa-chart-line mr-2 mb-2 mt-2"></i>Xem báo cáo doanh thu</a>
          </li>
        <li>
          <a href="#"><i class="fas fa-users mr-2 mb-2 mt-2"></i>Quản lý nhân viên</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-table mr-2 mb-2 mt-2"></i>Quản lý bàn</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-calendar-day mr-2 mb-2 mt-2"></i>Quản lý sự kiện</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-clipboard mr-2 mb-2 mt-2"></i>Quản lý đặt bàn</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-utensils mr-2 mb-2 mt-2"></i>Quản lý món ăn</a>
        </li>
        <li>
          <a href="#"><i class="fas fa-clock mr-2 mb-2 mt-2"></i>Quản lý lịch làm</a>
        </li>
      </ul>
    </nav>

    <!-- Phần nội dung trang -->
    <div id="content" class="bg-light">
      <!-- Thanh navbar trên cùng -->
      <nav class="navbar navbar-expand navbar-dark bg-white shadow-sm">
        <!-- Logo -->
        
        <div class="user-profile text-center p-3 border-bottom">
            <h5 class="mb-0">Stanley Jones</h5>
            <span class="text-muted">Administrator</span>
          </div>
        <!-- Nút toggle ẩn/hiện sidebar (cho màn hình nhỏ) -->
        <button
          class="btn btn-link d-md-none"
          type="button"
          data-toggle="collapse"
          data-target="#sidebar"
          aria-controls="sidebar"
          aria-expanded="false"
          aria-label="Toggle sidebar"
        >
          <i class="fas fa-bars"></i>
        </button>

        <!-- Phần bên phải navbar -->
        <div class="ml-auto d-flex align-items-center">

          <!-- Thông tin user -->
          <div class="dropdown">
            <a
              class="dropdown-toggle d-flex align-items-center text-dark"
              href="#"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
            <i class="fas fa-user"></i>
              <span class="ml-2">Martine K</span>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
              <a class="dropdown-item" href="#">Logout</a>
            </div>
          </div>
        </div>
      </nav>

    <div >
        <%- body %> <!-- Render nội dung động -->
    </div>

    </div> <!-- End #content -->

    <!-- Bootstrap + jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

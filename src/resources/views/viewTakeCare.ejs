<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách TakeCare</title>
    <link rel="stylesheet" href="/css/viewTakeCare.css">
</head>
<body>
    <div class="container-takecare">
        <h2>Danh Sách Lịch Làm</h2>

        <% if (takeCares.length === 0) { %>
            <p class="no-data">Không có lịch làm nào.</p>
        <% } else { %>
            <table class="table-takecare">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Bàn</th>
                        <th>Nhân Viên</th>
                        <th>Email</th>
                        <th>Ngày</th>
                        <th>Giờ Bắt Đầu</th>
                        <th>Giờ Kết Thúc</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% takeCares.forEach((takeCare, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td>
                                <%= takeCare.table ? (takeCare.table.idTable) : "Không có thông tin bàn" %>
                            </td>
                            <td>
                                <%= takeCare.staff ? (takeCare.staff.firstName + " " + takeCare.staff.lastName) : "Không có nhân viên" %>
                            </td>
                            <td>
                                <%= takeCare.staff ? takeCare.staff.email : "Không có email" %>
                            </td>
                            <td>
                                <%= takeCare.date ? takeCare.date.toISOString().split('T')[0] : "Không có ngày" %>
                            </td>
                            <td>
                                <%= takeCare.startTime || "Không có giờ bắt đầu" %>
                            </td>
                            <td>
                                <%= takeCare.endTime || "Không có giờ kết thúc" %>
                            </td>
                            <td>
                                <button class="btn-primary-takecare">Xem chi tiết</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>

        <a href="/admin/takeCare/create" class="btn-success-takecare">Tạo Lịch Làm Mới</a>
    </div>
</body>
</html>

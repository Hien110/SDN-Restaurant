<html>
  <head>
    <title>Home page</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <link href="/css/header.css" rel="stylesheet" />
    <script src="/js/header.js"></script>
  </head>

  <body>
    <div class="navbar">
      <div class="Res-title">
        <img
          alt="Thư vãn logo"
          height="100"
          src="/image/logoRes.png"
          width="100"
        />
        <div class="res-name">
          <div class="res--name-first">Restaurant</div>
          <div class="res--name-second">Thư vãn</div>
        </div>
      </div>
      <div class="nav-links">
        <a href="/"> Trang chủ </a>
        <a href="/aboutUs"> Về chúng tôi </a>
        <a href="/menu"> Thực đơn </a>
        <a href="/bookingTable"> Đặt chỗ </a>
        <a href="#"> Khuyễn mãi </a>
        <a href="#"> Tin tức </a>
      </div>

      <div class="user-menu">
        <% if (user) { %>
        <div class="user-avatar">
          <img src="<%= user.avatar %>" alt="Avatar" />
          <div class="dropdown">
            <span> <%= user.name %> </span>
            <span> <%= user.name %> </span>
            <div class="dropdown-content">
              <% if (user.role === 'CUSTOMER') { %>
                <a href="/users/<%= user._id %>">Hồ sơ</a>
              <% } else if (user.role === 'RESOWNER') { %>
                <a href="/admin">Quản lí</a>
              <% } else { %>
                <a href="/admin">Quản lí</a>
              <% } %>

              <form action="/auth/logout" method="POST">
                <button
                  type="submit"
                  style="background-color: #fff; border: none"
                >
                  Đăng xuất
                </button>
              </form>
            </div>
          </div>
        </div>
        <% } else { %>
        <div class="auth-links">
          <a href="/auth/login">Đăng nhập</a>
          <a href="/">|</a>
          <a href="/auth/register">Đăng ký</a>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Netflix Login Page | CodingNepal</title>
  <link rel="stylesheet" href="/css/login.css" />
</head>
<body>
  <nav>
    <a href="#"><img src="/image/logoRes.png" alt="logo" /></a>
  </nav>
  <div class="form-wrapper">
    <h2>Đăng nhập</h2>
    
    <form action="/sign-in" method="POST">
      <div class="form-control">
        <input type="email" name="email" required>
        <label>Email </label>
      </div>
      <div class="form-control">
        <input type="password" name="password" required>
        <label>Mật khẩu</label>
      </div>
      <button type="submit">Đăng nhập</button>
      <div>
      </div>
      <% if (typeof message !== 'undefined') { %>
      <p style="color: rgb(255, 255, 255); padding-top: 8px; padding-bottom: 8px; font-size: 14px;  text-align: center;" >
          <%= message %>
      </p>
      <% } %>
      <% if (typeof error !== 'undefined') { %>
      <p style="color: red; padding-top: 8px; padding-bottom: 8px; font-size: 16px; text-align: center;">
        <%= typeof error !=='undefined' ? error: "" %>
      </p>
      <% } %>
      <div>
        <p style="font-size: 16px;">Bạn chưa có tài khoản? <a href="./register">Đăng
            ký</a>
        </p>
        <a href="/reset-password">Quên mật khẩu</a>
      </div>
    </form>
  </div>
</body>
 <html lang="en">
    <head>
     <meta charset="utf-8"/>
     <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
     <title>
      Profile Page
     </title>
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
     <link rel="stylesheet" href="/css/index.css">
    </head>
    <body>
     <div class="container">
      <div class="sidebar">
       <i class="fas fa-th-large active">
       </i>
       <i class="fas fa-clock">
       </i>
       <i class="fas fa-user-friends">
       </i>
       <i class="fas fa-comments">
       </i>
       <i class="fas fa-cog">
       </i>
      </div>
      <div class="main-content">
       <div class="profile-card">
        <div class="profile-header">
            <img src="<%= users.avatar %>" alt="Avatar" class="avatar">
         <div>
          <h2>
            <%= users.firstName || "Chưa cập nhật" %> <%= users.lastName || "Chưa cập nhật" %>
          </h2>
          <p>
            <%= users.email %>
          </p>
         </div>
         <a href="/users/change-password/<%= users.id %>">
            <button>
             Edit
            </button>
        </a>
        <a href="/users/update-profile/<%= users.id %>">
            <button>
             Edit
            </button>
        </a>
        </div>
        <div class="form-grid">
         <div class="form-group">
          <label>
           Full Name
          </label>
          <label for=""><%= users.firstName || "Chưa cập nhật" %></label>
         </div>
         <div class="form-group">
          <label>
           Email
          </label>
          <label for=""><%= users.email %></label>
         </div>
         <div class="form-group">
          <label>
           Gender
          </label>
          <label for=""><%= users.gender === true ? "Nam" : users.gender === false ? "Nữ" : "Không xác định" %></label>
         </div>
         <div class="form-group">
          <label>
           Country
          </label>
          <label for=""><%= users.address || "Chưa cập nhật" %></label>
         </div>
         <div class="form-group">
          <label>
           Create At
          </label>
          <label for=""><%= new Date(users.createdDate).toLocaleDateString() %></label>
         </div>
         <div class="form-group">
          <label>
           Update At
          </label>
          <label for=""><%= new Date(users.updatedDate).toLocaleDateString() %></label>
         </div>
        </div>
       </div>
      </div>
      <!-- Profile Icon -->
      <div class="top-right-icons">
       <i class="fas fa-bell">
       </i>
       <img alt="Profile icon" height="40" src="<%= users.avatar %>" width="40"/>
      </div>
     </div>
    </body>
   </html>
   



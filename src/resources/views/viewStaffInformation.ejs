<head>
    <link rel="stylesheet" href="/css/viewStaff.css">
</head>

<div class="employee-container">
    <h1>Danh sách nhân viên</h1>

    <!-- Hiển thị thông báo nếu có -->
    <% if (typeof successMessage !== "undefined" && successMessage) { %>
      <div class="alert success">
        <%= successMessage %>
      </div>
    <% } %>

    <% if (typeof errorMessage !== "undefined" && errorMessage) { %>
      <div class="alert error">
        <%= errorMessage %>
      </div>
    <% } %>

    <!-- Thanh tìm kiếm -->
    <div class="search-bar">
        <form action="/staffs" method="GET">
            <input type="text" name="search" placeholder="Nhập tên nhân viên..." value="<%= searchQuery ? searchQuery : '' %>">

            <!-- Dropdown lọc theo vai trò -->
            <select class="dropdown-role" name="role">
                <option value="">Tất cả vai trò</option>
                <option value="WAITER" <%= selectedRole === "WAITER" ? "selected" : "" %>>Waiter</option>
                <option value="KITCHENSTAFF" <%= selectedRole === "KITCHENSTAFF" ? "selected" : "" %>>Kitchen Staff</option>
                <option value="RESMANAGER" <%= selectedRole === "RESMANAGER" ? "selected" : "" %>>Restaurant Manager</option>
                <option value="RESOWNER" <%= selectedRole === "RESOWNER" ? "selected" : "" %>>Restaurant Owner</option>
            </select>

            <button type="submit">Tìm kiếm</button>
        </form>
    </div>

    <!-- Nút tạo nhân viên -->
    <div class="action-bar">
      <a href="/staffs/create" class="btn-create">Tạo nhân viên mới</a>
    </div>

    <table class="employee-table">
        <thead>
            <tr>
                <th>No</th> <!-- Cột số thứ tự -->
                <th>Tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Vai trò</th>
                <th>Hành động</th>
                <th>Xem chi tiết thông tin</th>
            </tr>
        </thead>
        <tbody>
            <% if (staffs.length > 0) { %>
                <% staffs.forEach((staff, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td> <!-- Hiển thị số thứ tự -->
                        <td><%= staff.firstName %> <%= staff.lastName %></td>
                        <td><%= staff.email %></td>
                        <td><%= staff.phoneNumber %></td>
                        <td><%= staff.role %></td>
                        <td>
                            <form action="/staffs/lock/<%= staff._id %>" method="POST">
                                <% if (staff.status === "ACTIVE") { %>
                                    <button type="submit" class="btn-lock">Khóa</button>
                                <% } else { %>
                                    <button type="submit" class="btn-unlock">Hủy Khóa</button>
                                <% } %>
                            </form>
                        </td>
                        <td>
                            <a href="/staffs/detail/<%= staff._id %>" class="btn-view-detail">Xem chi tiết</a>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="8" class="no-result">Không tìm thấy nhân viên nào phù hợp!</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
